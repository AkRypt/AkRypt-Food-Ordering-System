<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akrypt_food_ordering_system">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/food_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/food_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Restaurants"/>
        <activity android:name=".Menus"
            android:screenOrientation="portrait"/>
        <activity android:name=".Details"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".Bill"
            android:screenOrientation="portrait"/>

    </application>

</manifest>